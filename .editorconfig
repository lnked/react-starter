# editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
indent_style = space
max_line_length = 100
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
file_type = jsx
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{*.md, COMMIT_EDITMSG}]
max_line_length = 0
